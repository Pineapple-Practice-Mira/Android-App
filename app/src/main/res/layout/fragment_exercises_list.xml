<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/width_margin_16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="@dimen/width_margin_16dp_from_end" />

    <TextView
        android:id="@+id/about"
        style="@style/Body14Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="@string/about_app"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toTopOf="parent" />

    <site.pnpl.mira.ui.exercise.customview.ItemExercise
        android:id="@+id/introExercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about" />

    <TextView
        android:id="@+id/title"
        style="@style/TitleBold18Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_exercise"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/introExercise" />

    <TextView
        android:id="@+id/subHead"
        style="@style/Body14Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/exercise_sub_head"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/end"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <HorizontalScrollView
        android:id="@+id/emotionScrollView"
        android:layout_width="0dp"
        android:layout_height="@dimen/emotion_container_height"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@id/end"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/subHead">

        <LinearLayout
            android:id="@+id/emotionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animation_slide_up"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/bottom_bar_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emotionScrollView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="-26dp"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="8dp"
        android:layoutAnimation="@anim/layout_animation_slide_up"
        android:requiresFadingEdge="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:listitem="@layout/item_exercise" />

    <ImageView
        android:id="@+id/progressLoading"
        android:layout_width="@dimen/exercise_list_progress_bar_size"
        android:layout_height="@dimen/exercise_list_progress_bar_size"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:src="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="@id/end"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/notice"
        style="@style/Body14Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/label_exercise_not_found"
        android:visibility="gone"
        android:padding="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/end"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintWidth="0" />

    <Button
        android:id="@+id/update"
        style="@style/Links16Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:visibility="gone"
        android:padding="0dp"
        android:text="@string/update"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintStart_toStartOf="@id/start"/>

    <site.pnpl.mira.ui.customview.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/blackout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_alpha30"
        android:translationZ="5dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <site.pnpl.mira.ui.customview.PopUpLoading
            android:id="@+id/popUpLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:alpha="0"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
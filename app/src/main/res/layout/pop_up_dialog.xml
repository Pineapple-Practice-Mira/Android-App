<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popUpDialog"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/pop_up_dialog_background"
        android:elevation="6dp">

        <TextView
            android:id="@+id/title"
            style="@style/Title18Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="-3sp"
            android:textAlignment="center"
            android:textColor="@color/third"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Возврат на главную" />

        <TextView
            android:id="@+id/content"
            style="@style/Body14Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Данные не будут сохранены. Вы уверены, что хотите прервать запись?" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/leftButton"
            style="@style/Buttons16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/pop_up_button_background"
            android:letterSpacing="0.01"
            android:textColor="@color/primary"
            app:layout_constraintEnd_toStartOf="@id/center"
            app:layout_constraintTop_toBottomOf="@id/content"
            tools:text="Действие" />

        <Button
            android:id="@+id/rightButton"
            style="@style/Buttons16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/pop_up_button_background"
            android:letterSpacing="0.01"
            android:textColor="@color/primary"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintTop_toBottomOf="@id/content"
            tools:text="Действие" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
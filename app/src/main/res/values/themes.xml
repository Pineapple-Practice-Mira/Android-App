<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mira" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialCalendarTheme">@style/MiraDatePicker</item>
    </style>

    <style name="Theme.Mira" parent="Base.Theme.Mira" />

    <style name="MiraDatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar.Fullscreen">
        <item name="rangeFillColor">@color/dark_grey</item>
<!--        <item name="daySelectedStyle">@style/MiraDatePickerDaySelected</item>-->
<!--        <item name="dayTodayStyle">@style/MiraDatePickerDayToday</item>-->
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="MiraDatePickerDayToday" parent="Widget.Material3.MaterialCalendar.Day.Today">
        <item name="colorPrimary">@color/secondary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
    </style>

    <style name="MiraDatePickerDaySelected">
        <item name="colorPrimary">@color/primary</item>
        <item name="itemFillColor">@color/primary</item>
    </style>

    <style name="pop_up_dialog_from_bottom" >
        <item name="android:windowEnterAnimation">@anim/pop_up_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_up_dialog_bottom_exit</item>
    </style>

    <style name="pop_up_dialog_from_right" >
        <item name="android:windowEnterAnimation">@anim/pop_up_dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_up_dialog_right_exit</item>
    </style>


    <style name="BaseTextTheme" parent="TextAppearance.AppCompat" />

    <style name="WixMadeforDisplayMedium" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_medium</item>
    </style>

    <style name="WixMadeforDisplayBold" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_bold</item>
    </style>

    <style name="WixMadeforDisplayRegular" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_regular</item>
    </style>

    <style name="WixMadeforDisplaySimiBold" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_semi_bold</item>
    </style>

    <style name="Title18Dark" parent="WixMadeforDisplayRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Title14DarkGray" parent="WixMadeforDisplayRegular">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleBold18Primary" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Body14Primary" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>

    </style>

    <style name="Body12White" parent="WixMadeforDisplayMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body14Dark" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/dark</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body14Dark.Alpha50">
        <item name="alpha">0.5</item>
    </style>

    <style name="Notion12" parent="WixMadeforDisplayBold">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.44sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Notion16" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DateNumber24" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">-8sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Links16Primary" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Buttons16" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Button16White" parent="WixMadeforDisplaySimiBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
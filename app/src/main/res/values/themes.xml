<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mira" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Mira" parent="Base.Theme.Mira" />


    <style name="BaseTextTheme" parent="TextAppearance.AppCompat"/>

    <style name="WixMadeforDisplayMedium" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_medium</item>
    </style>

    <style name="WixMadeforDisplayBold" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_bold</item>
    </style>
    <style name="WixMadeforDisplayRegular" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_regular</item>
    </style>

    <style name="WixMadeforDisplaySimiBold" parent="BaseTextTheme">
        <item name="fontFamily">@font/wix_madefor_display_semi_bold</item>
    </style>

    <style name="Title18Dark" parent="WixMadeforDisplayRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title14DarkGray" parent="WixMadeforDisplayRegular">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleBold18Primary" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TittleBold18Dark" parent="TitleBold18Primary">
        <item name="android:textColor">@color/dark</item>
    </style>



    <style name="Body14Primary" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body14Dark" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body14Dark.Alpha50">
        <item name="alpha">0.5</item>
    </style>

    <style name="Notion12" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Notion16" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DateNumber24" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Links16Primary" parent="WixMadeforDisplayMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Links16White" parent="Links16Primary">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Buttons16" parent="WixMadeforDisplayBold">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button16White" parent="WixMadeforDisplaySimiBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>